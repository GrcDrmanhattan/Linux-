void Max();
void Max(int a){cout<<"1"<<endl;};
void Max(double a , double = 1.2){cout<<"3"<<endl;};
void Max(const char* a, const char* b){cout<<"2"<<endl;};


int main()
{
    Max(2.4); // 3 
    return 0;
}

