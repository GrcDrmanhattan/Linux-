汉诺塔

#include <iostream>
using namespace std;
 
void hannuo(int a, int b, int c, int n) {
    if (n == 1) {
        cout << "move disk " << n << " from peg " << a << " to peg " << c << endl;
    } else {
        hannuo(a, c, b, n - 1);
        cout << "move disk " << n << " from peg " << a << " to peg " << c << endl;
        hannuo(b, a, c, n - 1);
    }
}
 
int main(void) {
    int times;
    cin >> times;
    while (times--) {
        int n;
        cin >> n; // 几个盘子
        hannuo(1, 2, 3, n);
    }
}

---------------------  
不带盘子的

#include <iostream>
using namespace std;
 
void hannuo(int a, int b, int c, int n) {
    if (n == 1) {
        cout << " from " << a << " to" << c << endl;
        return;
    } else {
        hannuo(a, c, b, n-1); // n-1个盘子，从a到b
        hannuo(a, b, c, 1);  // 1个盘子，从a到c
        hannuo(b, a, c, n-1); // n-1个，从b到c
    }
}
 
int main(void) {
    int times;
    cin >> times;
    while (times--) {
        int n;
        cin >> n;
        hannuo(1, 2, 3, n);
    }
}

----------------- daan

#include <iostream>
using namespace std;
 
void prin(int n , int a, int c);
void hannuo(int a, int b, int c, int n) {
    if(n>0){
        hannuo(a, c, b, n-1);
        prin(n, a, c);
        hannuo(b, a, c, n-1);
    }
}

int cnt=0;

void prin(int n ,int a ,int c){
    cout<<++cnt<<" 步 "<<"移动盘子 "<<n<<" from "<<a<<" to "<<c<<endl;
}

int main(void) {
    int times;
    cin >> times;
    while (times--) {
        int n;
        cin >> n;
        hannuo(1, 2, 3, n);
    }
}



----------------

1
3
1 步 移动盘子 1 from 1 to 3
2 步 移动盘子 2 from 1 to 2
3 步 移动盘子 1 from 3 to 2
4 步 移动盘子 3 from 1 to 3
5 步 移动盘子 1 from 2 to 1
6 步 移动盘子 2 from 2 to 3
7 步 移动盘子 1 from 1 to 3




------

#include <iostream>
#include <cstdio>
using namespace std;
 
int cnt;
 
void move(int id, char from, char to) // 打印移动方式：编号，从哪个盘子移动到哪个盘子
{
    printf ("step %d: move %d from %c->%c\n", ++cnt, id, from, to);
}
 
void hanoi(int n, char x, char y, char z)
{
    if (n == 0)
        return;
    hanoi(n - 1, x, z, y);
    move(n, x, z);
    hanoi(n - 1, y, x, z);
}
 
int main()
{
    int n;
    cnt = 0;
    scanf ("%d", &n);
    hanoi(n, 'A', 'B', 'C');
    return 0;
}

